<Window x:Class="WpfAppSln.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSln"
        mc:Ignorable="d"
        Title="XSD Generator" Height="450" Width="700"
        Background="#f5f5f5"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Server -->
        <TextBlock Text="Server:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
        <TextBox x:Name="TxtServer" Grid.Row="0" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#ccc" BorderThickness="1" Background="White"/>

        <!-- Database -->
        <TextBlock Text="Database:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
        <TextBox x:Name="TxtDatabase" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#ccc" BorderThickness="1" Background="White"/>

        <!-- User -->
        <TextBlock Text="User:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
        <TextBox x:Name="TxtUser" Grid.Row="2" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#ccc" BorderThickness="1" Background="White"/>

        <!-- Password -->
        <TextBlock Text="Password:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
        <PasswordBox x:Name="TxtPassword" Grid.Row="3" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#ccc" BorderThickness="1" Background="White"/>

        <!-- Stored Procedure -->
        <TextBlock Text="Stored Procedure:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
        <TextBox x:Name="TxtStoredProc" Grid.Row="4" Grid.Column="1" Margin="5" Padding="5" BorderBrush="#ccc" BorderThickness="1" Background="White"/>

        <!-- Folder Selection -->
        <Button Content="Select Folder" Grid.Row="5" Grid.Column="0" Margin="5" Padding="5" Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="SelectFolder_Click" BorderThickness="0" Cursor="Hand"/>
        <TextBox x:Name="TxtFolder" Grid.Row="5" Grid.Column="1" Margin="5" Padding="5" IsReadOnly="True" Background="#eee" BorderBrush="#ccc" BorderThickness="1"/>

        <!-- Generate XSD -->
        <Button Content="Generate XSD" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,20,0,0" Height="40" Background="#2196F3" Foreground="White" FontSize="16" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="GenerateXsd_Click"/>
    </Grid>
</Window>
